<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="3dp">
    <ImageView
        android:id="@+id/image_big"
        android:layout_width="44dp"
        android:layout_height="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_bg"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/text_bg"
        android:layout_width="44dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/image_big"
        app:layout_constraintEnd_toEndOf="@id/image_big"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/shape_portrait_item_text_bg"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/text_bg"
        app:layout_constraintEnd_toEndOf="@id/text_bg"
        app:layout_constraintBottom_toBottomOf="@id/text_bg"
        app:layout_constraintTop_toTopOf="@id/text_bg"
        android:layout_marginBottom="2dp"
        tools:ignore="SmallSp" />
    <ImageView
        android:id="@+id/vip_tip"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_vip_logo"
        app:layout_constraintStart_toEndOf="@id/image_big"
        app:layout_constraintEnd_toEndOf="@id/image_big"
        app:layout_constraintTop_toTopOf="@id/image_big"
        app:layout_constraintBottom_toTopOf="@id/image_big"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>