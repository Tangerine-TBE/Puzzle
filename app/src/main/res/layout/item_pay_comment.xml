<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_pay_comment_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/ic_pay_comment_avatar_1"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户183****1458"
            android:textColor="#ff171717"
            android:textSize="15sp"
            android:layout_marginStart="4dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pay_comment_star"
                android:padding="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pay_comment_star"
                android:padding="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pay_comment_star"
                android:padding="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pay_comment_star"
                android:padding="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pay_comment_star"
                android:padding="2dp"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钱花的值！对比了好久才选择了！也很棒、果然没有让我失望,服务给我的感觉很好。"
        android:textColor="#272727"
        android:textSize="14sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"/>
</LinearLayout>