<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="3dp">
    <ImageView
        android:id="@+id/image_big"
        android:layout_width="38dp"
        android:layout_height="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/text_bg"
        android:layout_width="38dp"
        android:layout_height="15dp"
        app:layout_constraintStart_toStartOf="@id/image_big"
        app:layout_constraintEnd_toEndOf="@id/image_big"
        app:layout_constraintBottom_toBottomOf="@id/image_big"
        android:src="@drawable/ic_portrait_bg_item_bottom"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff272727"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="@id/image_big"
        app:layout_constraintEnd_toEndOf="@id/image_big"
        app:layout_constraintBottom_toBottomOf="@id/image_big"
        android:layout_marginBottom="2dp"/>
    <ImageView
        android:id="@+id/vip_tip"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_vip_logo"
        app:layout_constraintStart_toEndOf="@id/image_big"
        app:layout_constraintEnd_toEndOf="@id/image_big"
        app:layout_constraintTop_toTopOf="@id/image_big"
        app:layout_constraintBottom_toTopOf="@id/image_big"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>