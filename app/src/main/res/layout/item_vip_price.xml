<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_vip_price_n"
    android:layout_marginStart="2.5dp"
    android:layout_marginEnd="2.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rootView"
        android:layout_centerVertical="true">
        <LinearLayout
            android:id="@+id/topView"
            android:layout_width="52dp"
            android:layout_height="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_item_vip_price_top"
            android:gravity="center">
            <ImageView
                android:visibility="gone"
                android:id="@+id/fire"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_main_fire"
                android:layout_marginEnd="3dp"/>
            <TextView
                android:id="@+id/tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:maxLines="1"
                tools:ignore="SmallSp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_center_tip"
            android:text="半年"
            android:textSize="13sp"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topView"/>

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥14.88"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_center_tip"
            android:layout_marginTop="13dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="25dp"/>
        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价30/月"
            android:textColor="#979797"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="35dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>