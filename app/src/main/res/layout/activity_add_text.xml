<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sel_text_main_color">
        <ImageView
            android:id="@+id/barBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>
        <TextView
            android:textColor="@color/white"
            android:text="文字"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/barBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/reset"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_clean"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/redo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@color/white"
            android:layout_toStartOf="@id/reset"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/undo"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@color/white"
            android:layout_toStartOf="@id/redo"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:visibility="invisible"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:layout_above="@id/bottomView">
        <com.xiaopo.flying.sticker.StickerView
            android:id="@+id/stickerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showBorder="true"
            app:borderColor="@color/sel_text_main_color"
            app:showIcons="true"
            app:borderAlpha="200"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/srcImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </com.xiaopo.flying.sticker.StickerView>
        <ImageView

            android:id="@+id/show"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_original"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:text="样式"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="透明度"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginStart="18dp"/>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="8dp"
                android:duplicateParentState="true"
                android:max="255"
                android:maxHeight="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:progress="255"
                android:progressDrawable="@drawable/seek_bar_bg"
                android:thumb="@drawable/seek_thumb"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <com.weilai.jigsawpuzzle.weight.ColorPickerView
                android:id="@+id/colorPicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:orientation="horizontal"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:id="@+id/text_style_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_text_style_y"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="样式"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/text_color_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_text_color_n"
                    android:scaleType="centerInside"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/no"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_no"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/sel_text_main_color"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/yes"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_yes"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>