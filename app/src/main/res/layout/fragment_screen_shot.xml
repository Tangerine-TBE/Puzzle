<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_back"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_web"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layout_title"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_button_template"
        android:backgroundTint="@color/card_view_color"
        android:gravity="top"
        android:hint="@string/please"
        android:padding="12dp"
        android:textColorHighlight="@color/sel_text_main_color"
        android:textColorHint="#C0C0C0"
        android:textCursorDrawable="@drawable/text_cursor_drawable"
        android:textSelectHandle="@drawable/text_cursor_drawable"
        android:textSelectHandleLeft="@drawable/text_cursor_drawable"
        android:textSelectHandleRight="@drawable/text_cursor_drawable"
        android:textSize="16sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_below="@id/et_web"
        android:id="@+id/rv_often_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button_template"
        android:text="打开网页"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>