<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_back" />

    <com.xiaopo.flying.puzzle.SquarePuzzleView
        android:id="@+id/puzzle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:layout_marginTop="20dp"
       />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content_change"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/tabLayout"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/border_seekbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxHeight="4dp"
            android:progress="0"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:splitTrack="false"
            android:thumb="@drawable/seek_bar_thumb"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/conner_seekbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxHeight="4dp"
            android:progress="0"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:splitTrack="false"
            android:thumb="@drawable/seek_bar_thumb"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_change_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_gravity="center"
            android:visibility="visible" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.weilai.jigsawpuzzle.weight.main.FlyTabLayout
        android:id="@+id/tabLayout"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="2dp"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/sel_text_main_color"
        app:tl_indicator_corner_radius="8dp"
        app:tl_indicator_margin_top="2dp"
        app:tl_indicator_width="30dp"
        app:tl_tab_padding="0dp"
        app:tl_textSelectColor="@color/sel_text_main_color"
        app:tl_textUnselectColor="@color/unl_text_main_color"
        app:tl_textsize="17sp"
        app:tl_underline_color="@color/white"
        android:background="@color/white"
        app:tl_underline_height="2dp" />
</RelativeLayout>