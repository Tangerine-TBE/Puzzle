<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vip_vip_dialog_bg_0"
        app:layout_constraintStart_toEndOf="@id/iv2"
        app:layout_constraintTop_toTopOf="@id/iv1"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vip_vip_dialog_bg_1"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vip_vip_dialog_bg_2"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv0"
        app:layout_constraintTop_toBottomOf="@id/iv1"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
        android:id="@+id/iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_vip_vip_dialog_bg_3"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toBottomOf="@id/iv2"/>
    <TextView
        android:id="@+id/now_price_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="永久VIP仅"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintBaseline_toBaselineOf="@id/now_price"
        app:layout_constraintEnd_toStartOf="@id/now_price"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥78"
        android:textColor="#FFD23D"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/now_price_tip"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintEnd_toStartOf="@id/now_price_unit"
        android:layout_marginTop="19dp"/>
    <TextView
        android:id="@+id/now_price_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/now_price"
        app:layout_constraintBaseline_toBaselineOf="@id/now_price"
        app:layout_constraintEnd_toEndOf="@id/iv2"/>
    <TextView
        android:id="@+id/original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原价：98元"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toBottomOf="@id/now_price"
        android:layout_marginTop="13dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv2"
        app:layout_constraintEnd_toEndOf="@id/iv2"
        app:layout_constraintTop_toBottomOf="@id/original_price"
        app:layout_constraintBottom_toBottomOf="@id/iv2">
        <LinearLayout
            android:id="@+id/wxPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vip_vip_dialog_select_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="#ffffd7a5"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/aliPay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vip_vip_dialog_select_n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="#ffffd7a5"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="立即购买"
        android:textColor="#ff272727"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/shape_main_vip_dialog_btn_bg"
        app:layout_constraintStart_toStartOf="@id/iv3"
        app:layout_constraintEnd_toEndOf="@id/iv3"
        app:layout_constraintTop_toTopOf="@id/iv3"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="10dp"/>
    <View
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/iv1"
        app:layout_constraintStart_toEndOf="@id/iv1"
        app:layout_constraintEnd_toEndOf="@id/iv1"/>
</androidx.constraintlayout.widget.ConstraintLayout>