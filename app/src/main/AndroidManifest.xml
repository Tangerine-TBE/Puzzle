        android:icon="@mipmap/icon"
        android:label="${app_name_channel}"
        android:name=".application.PuzzleApplication"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.Puzzle">
        <activity android:name=".activity.special.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.main.MainBaseActivity" android:exported="true"/>
        <activity android:name=".activity.template.TemplateBaseActivity" android:exported="true" android:screenOrientation="portrait"/>
        <activity android:name=".activity.puzzle.PuzzleBaseActivity" android:exported="true" android:screenOrientation="portrait"/>
